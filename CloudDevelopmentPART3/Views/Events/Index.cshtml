@model IEnumerable<CloudDevelopmentPART3.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>

<p>

    <a class="btn btn-primary " asp-controller="Events" asp-action="Create"> Create New Event </a>
</p>


<div class="container mt-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.EventName</h5>
                        <p class="card-text">Description: @item.Description</p>
                        <p class="card-text">Event Date: @item.EventDate.ToString("dd/MM/yyyy")</p>
                        <p class="card-text">Event Type: @item.EventTypeModel.EventType</p>

                        <br>
                        <br>
                        <a class="btn btn-primary" asp-controller="Events" asp-action="Edit" asp-route-id="@item.EventId">Edit</a>
                        <a class="btn btn-secondary" asp-controller="Events" asp-action="Details" asp-route-id="@item.EventId">Details</a>
                        <a class="btn btn-danger" asp-controller="Events" asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
