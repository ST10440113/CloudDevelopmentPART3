@model CloudDevelopmentPART3.Models.Venue
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Venue</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.imageUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.imageUrl))
            {
                <img src="@Model.imageUrl" alt="Venue Image" style="width:100%;height:auto;" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VenueId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary " asp-controller="Venues" asp-action="Index"> Back to List </a>
    </form>
</div>
