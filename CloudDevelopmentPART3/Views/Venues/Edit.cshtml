@model CloudDevelopmentPART3.Models.Venue


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Venue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VenueId" />

            <div class="form-group">
                <label asp-for="VenueName" class="control-label"></label>
                <input asp-for="VenueName" class="form-control" />
                <span asp-validation-for="VenueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>


            <div class="form-group">

                <label asp-for="imageUrl" class="control-label"></label>
                <input asp-for="imageUrl" input type="file" name="image" accept="image/*" />
                <span asp-validation-for="imageUrl" class="text-danger"></span>



                @if (!string.IsNullOrEmpty(@Model.imageUrl))
                {
                    <img src="@Model.imageUrl" alt="Venue Image" style="width:100%;height:auto;" />
                }
            </div>


            <div class="form-group">
                <br />
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-primary " asp-controller="Venues" asp-action="Index"> Back to List </a>
            </div>


        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


