@model CloudDevelopmentPART3.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingEndDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary " asp-controller="Bookings" asp-action="Index"> Back to List </a>
    </form>
</div>
