@model IEnumerable<CloudDevelopmentPART3.Models.Venue>

@{
    ViewData["Title"] = "FilterVenuesView";
}

<h1>Check For Available Venues </h1>
 
<form asp-controller="Bookings" asp-action="FilterVenuesView" method="get">
    <label> Start Date: <input type="date" name="startDate" required /></label>
    <label> End Date: <input type="date" name="endDate" required /></label>
    <input type="submit" value="Filter" />
</form>
<br />
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imageUrl)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.imageUrl))
                    {
                        <img src="@item.imageUrl" alt="Venue Image" style="max-width:100px;" />
                    }
                </td>




            </tr>
        }
    </tbody>
</table>
