@model CloudDevelopmentPART3.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<h1> Booking Details</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingEndDate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary btn-sm" asp-controller="Bookings" asp-action="Edit" asp-route-id="@Model?.BookingId">Edit</a>
    <a class="btn btn-primary btn-sm " asp-controller="Bookings" asp-action="Index"> Back to List </a>
</div>
